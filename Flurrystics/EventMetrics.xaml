<phone:PhoneApplicationPage 
    x:Class="Flurrystics.PivotPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:amq="clr-namespace:AmCharts.Windows.QuickCharts;assembly=AmCharts.Windows.QuickCharts.WP"
    xmlns:local="clr-namespace:Flurrystics"
    local:TiltEffect.IsTiltEnabled="True"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True" mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="Images/b2.png" />
        </Grid.Background>

        <toolkit:PerformanceProgressBar 
                        x:Name="progressBar1"
                        Width="400"
                        Height="40"
                        Margin="0,120,0,0"
                        IsIndeterminate="True" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible" />

        <!--Pivot Control-->
        <controls:Pivot x:Name="MainPivot" Title="FLURRYSTICS">

            <controls:Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="50" Margin="0,40,0,0" />
                </DataTemplate>
            </controls:Pivot.HeaderTemplate>

            <!--Pivot item one-->
            <controls:PivotItem Header="Unique Users">

                <!--ContentPanel contains details text. Place additional content here-->
                <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">

                    <amq:SerialChart x:Name="chart1" LegendVisibility="Collapsed"
                            CategoryValueMemberPath="Label"
                            AxisForeground="White"
                            PlotAreaBackground="Transparent"
                            GridStroke="DarkGray">
                        <amq:SerialChart.Graphs>
                            <amq:AreaGraph ValueMemberPath="Value1">
                                <amq:AreaGraph.Brush>
                                    <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                                </amq:AreaGraph.Brush>
                            </amq:AreaGraph>
                        </amq:SerialChart.Graphs>
                    </amq:SerialChart>

                </Grid>
            </controls:PivotItem>

            <!--Pivot item two-->
            <controls:PivotItem Header="Total Sessions">

                <!--ContentPanel contains details text. Place additional content here-->
                <Grid x:Name="ContentPanel2" Grid.Row="1" Margin="12,0,12,0">

                    <amq:SerialChart x:Name="chart2" LegendVisibility="Collapsed" 
                            CategoryValueMemberPath="Label"
                            AxisForeground="White"
                            PlotAreaBackground="Transparent"
                            GridStroke="DarkGray">
                        <amq:SerialChart.Graphs>
                            <amq:AreaGraph ValueMemberPath="Value2">
                                <amq:AreaGraph.Brush>
                                    <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                                </amq:AreaGraph.Brush>
                            </amq:AreaGraph>
                        </amq:SerialChart.Graphs>
                    </amq:SerialChart>

                </Grid>

            </controls:PivotItem>

            <!--Pivot item three-->
            <controls:PivotItem Header="Total Count">

                <!--ContentPanel contains details text. Place additional content here-->
                <Grid x:Name="ContentPanel3" Grid.Row="1" Margin="12,0,12,0">

                    <amq:SerialChart x:Name="chart3" LegendVisibility="Collapsed"
                            CategoryValueMemberPath="Label"
                            AxisForeground="White"
                            PlotAreaBackground="Transparent"
                            GridStroke="DarkGray">
                        <amq:SerialChart.Graphs>
                            <amq:AreaGraph ValueMemberPath="Value3">
                                <amq:AreaGraph.Brush>
                                    <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                                </amq:AreaGraph.Brush>
                            </amq:AreaGraph>
                        </amq:SerialChart.Graphs>
                    </amq:SerialChart>

                </Grid>
            </controls:PivotItem>

            <!--Pivot item four-->
            <!-- DISABLED FOR NOW -->
            <!--
            <controls:PivotItem Header="Duration">

                <Grid x:Name="ContentPanel4" Grid.Row="1" Margin="12,0,12,0">

                    <amq:SerialChart x:Name="chart4" LegendVisibility="Collapsed" 
                                        CategoryValueMemberPath="Label"
                            AxisForeground="White"
                            PlotAreaBackground="Transparent"
                            GridStroke="DarkGray">
                        <amq:SerialChart.Graphs>
                            <amq:AreaGraph ValueMemberPath="Value4">
                                <amq:AreaGraph.Brush>
                                    <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                                </amq:AreaGraph.Brush>
                            </amq:AreaGraph>
                        </amq:SerialChart.Graphs>
                    </amq:SerialChart>

                </Grid>

            </controls:PivotItem>
            -->
            
            <!--Pivot item nine-->
            <controls:PivotItem Header="Parameters">

                <!--ContentPanel contains details text. Place additional content here-->
                <Grid x:Name="ContentPanel9" Grid.Row="1" Margin="12,0,12,0">

                    <toolkit:ListPicker x:Name="ParametersMetricsListPicker"
                                        SelectedIndex="6"
                                        Header="Select Event Metric"
                                        SelectionChanged="ParametersMetricsListPicker_SelectionChanged"
                                        >
                        
                        <toolkit:ListPicker.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LineOne}" />
                            </DataTemplate>
                        </toolkit:ListPicker.ItemTemplate>
                        
                        <toolkit:ListPicker.FullModeItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LineOne}" FontSize="40" Margin="0,0,0,12" />
                            </DataTemplate>
                        </toolkit:ListPicker.FullModeItemTemplate>
                        
                    </toolkit:ListPicker>

                    <ListBox x:Name="ParametersListBox" Margin="0,127,-12,0" ItemsSource="{Binding Items}" SelectionChanged="ParametersListBox_SelectionChanged" Height="469">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,17" Width="432" Height="50">
                                    <TextBlock Text="{Binding LineOne}" TextWrapping="Wrap" Style="{StaticResource PhoneTextLargeStyle}"/>
                                    <TextBlock Text="{Binding LineTwo}" TextWrapping="Wrap" Margin="0,0,12,0" HorizontalAlignment="Right" Style="{StaticResource PhoneTextSubtleStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>

            </controls:PivotItem>

        </controls:Pivot>
    </Grid>

    <!--Sample code showing usage of ApplicationBar-->
